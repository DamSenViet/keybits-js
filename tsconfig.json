{
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./tests", "./src/**/*.test.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    // ### PROJECT OPTIONS
    //  module type to compile into
    "module": "ES6",
    // target javascript version
    "target": "ES6",
    "outDir": "./dist",
    // lib needs to be all ts
    "allowJs": false,
    "removeComments": false,
    // webpack needs this to generate source maps
    "sourceMap": true,
    // "declaration": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    // ### STRICT CHECKS
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
    // ### ADVANCED
    // "preserveConstEnums": true,
  }
}
